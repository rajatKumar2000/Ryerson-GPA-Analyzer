<Window x:Class="Ryerson_GPA_Analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ryerson_GPA_Analyzer"
        mc:Ignorable="d"
        Background="White"
        Title="Ryerson GPA Analyzer" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" CornerRadius="7" Margin="3" BorderBrush="Black" BorderThickness="2">
            <StackPanel Name="stkGraphArea">
                <Label Name="lblTemp" Content="This is temp: "  />
            </StackPanel>
        </Border>
        
        <GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Stretch" Margin="0,0,0,0"></GridSplitter>

        <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" CornerRadius="7" Margin="3" BorderBrush="Black" BorderThickness="2">
            <StackPanel Name= "stkTableArea">
                <DataGrid Name="dgGrades" AutoGenerateColumns="False" IsReadOnly="True" Margin="3,6,4,3">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Semester" Binding="{Binding SemesterName}" Width="*" />
                        <DataGridTextColumn Header="TGPA" Binding="{Binding TGPA}" Width="*" />
                        <DataGridTextColumn Header="CGPA" Binding="{Binding CGPA}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
        
        <GridSplitter Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,0,0"></GridSplitter>

        <Border Grid.Column="0" Grid.Row="2" CornerRadius="7" Margin="3" BorderBrush="Black" BorderThickness="2">
            <StackPanel Name="stkCourseInfoArea" >

            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>
